{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es2015",
    "target": "es5",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015",
      "es2015.promise",
      "es2016.array.include",
      "es2018",
      "dom",
      "dom.iterable"
    ],
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
